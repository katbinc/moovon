<com.wewant.moovon.newsfbsdk.view.CommentsLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_comments_bg"
    android:layout_alignParentBottom="true"
    >

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="21dp"
        android:gravity="center">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Some One and 20 Others Like this"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/commentsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:paddingBottom="130dp"
        android:layout_marginBottom="0dp"
        android:layout_alignLeft="@id/headerLayout"
        android:layout_alignStart="@id/headerLayout"
        android:layout_alignRight="@id/headerLayout"
        android:layout_alignEnd="@id/headerLayout"
        android:divider="@android:color/transparent"
        android:dividerHeight="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/commentsBackground"
        android:layout_alignLeft="@id/headerLayout"
        android:layout_alignStart="@id/headerLayout"
        android:layout_alignRight="@id/headerLayout"
        android:layout_alignEnd="@id/headerLayout">

        <EditText
            android:id="@+id/newComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/facebook_bg"
            android:layout_marginTop="14dp"
            android:padding="5dp"
            android:hint="@string/prompt_comment"
            android:lines="2"
            android:minLines="2"
            android:textSize="20sp"
            android:inputType="textMultiLine"
            android:textColor="@color/listItemDescription"
            />
        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_comment"
            android:layout_gravity="center"
            />
    </LinearLayout>

</com.wewant.moovon.newsfbsdk.view.CommentsLayout>